<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>Smart Cities</title>
</head>

<body>
    <div class="container text-center">
        <% if (user) { %>
            <h1 class="m-4"> Welcome <%= user.username %></h1>
            <form action="/user/logout?_method=DELETE" method="POST">
                <button type="submit">Log Out</button>
            </form>
        <% } else { %>
            <div class="m-4 d-flex justify-content-evenly">
                <form action="/user/login" method="GET">
                    <button type="submit">Log in</button>
                </form>

                <form action="/user/register" method="GET">
                    <button type="submit">Register</button>
                </form>
            </div>
        <% } %>

        <h1 class="m-4">Event List</h1>
        
        <div class="container d-flex flex-wrap justify-content-evenly">
            <% events.forEach( event => { %>
                <div class="card m-4 w-25">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h3><%= event.message %></h3>
                        <h5><%= event.type %></h5>
                        <h5>Level: <%= event.level %></h5>
                        <p>Location: <%= event.location %></p>
                        <p>Latitud: <%= event.lat %></p>
                        <p>Longitud: <%= event.lon %></p>
                        <p>Date: <%= event.createdAt %></p>
                    </div>
                </div>
            <% }) %>
        </div>
        
    </div>

</body>

</html>